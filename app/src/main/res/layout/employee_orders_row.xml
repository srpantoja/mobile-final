<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview_items_linear_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:id="@+id/cardViewOnClick">

        <TextView
            android:id="@+id/orders_client_name_fun"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10px"
            android:textColor="@color/purple_700"
            android:textSize="18dp"
            android:text="Cliente"/>

        <TextView
            android:id="@+id/orders_street_name_fun"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/orders_client_name_fun"
            android:layout_margin="10px"
            android:textColor="@color/purple_700"
            android:textSize="18dp"
            android:text="Rua"/>
        <TextView
            android:id="@+id/orders_district_name_fun"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/orders_street_name_fun"
            android:layout_margin="10px"
            android:textColor="@color/purple_700"
            android:textSize="18dp"
            android:text="Bairro"/>
        <TextView
            android:id="@+id/orders_number_name_fun"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/orders_district_name_fun"
            android:layout_margin="10px"
            android:textColor="@color/purple_700"
            android:textSize="18dp"
            android:text="Number"/>
        <TextView
            android:id="@+id/orders_status_name_fun"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/orders_number_name_fun"
            android:layout_margin="10px"
            android:textColor="@color/purple_700"
            android:textSize="18dp"
            android:text="Status"/>

        </LinearLayout>
    </LinearLayout>
